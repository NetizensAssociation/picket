{
  "name": "Netizens Association Browser Extension",
  "version": "0.0",
  "description": "Collective bargaining for netizens",
  "manifest_version": 2,
  "background": {
    "scripts": ["dist/picket.js"],
    "persistent": true
  },
  "permissions": [
    "storage", "webRequest", "webRequestBlocking", "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "src/popup/popup.html"
  },
  "web_accessible_resources": [
    "src/picket/templates/blocked.html"
  ]
}
