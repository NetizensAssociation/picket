{
  "name": "Netizens Association Browser Extension",
  "version": "0.0",
  "description": "Collective bargaining for netizens",
  "manifest_version": 2,
  "background": {
    "scripts": ["picket.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["banner.js"]
    }
  ],
  "permissions": [
    "storage", "webRequest", "webRequestBlocking", "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "blocked.html",
    "shared.css"
  ]
}
